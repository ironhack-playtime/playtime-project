<h2>Edit a new match</h2>

<form action="/dashboard/view/<%=match._id%>" method="POST" id="form-container">
  <label for="date">Date</label>
  <input id="date" type="date" name="date" value="<%= match.date.toISOString().substring(0,10) %>">
  <br><br>
  <label for="sport">Sport</label>
  <input id="sport" type="text" name="sport" value="<%= match.sport %>">
  <br><br>
  <label for="maxnum">Number of players</label>
  <input id="maxnum" type="number" name="maxnum" placeholder="number" value="<%= match.playersNumber %>">
  <br><br>
  <input id="lat" name="lat" type="" value="<%= match.location.coordinates[0] %>">
  <input id="lon" name="lon" type="" value="<%= match.location.coordinates[1] %>">
  <br><br>
  <input type="text" id="pac-input" class="controls" placeholder="Enter a location">
  <div id="map"></div>
  <br><br>



  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>


  <button>Upload match</button>


</form>
<script src="https://maps.googleapis.com/maps/api/js?key=<%=process.env.PATH_GMaps%>&libraries=places"></script>
<script src="/javascripts/map.js"></script>
