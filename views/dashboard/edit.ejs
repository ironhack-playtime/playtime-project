<% if (typeof message != "undefined") { %>
  <div class="error-message">
    <%= message %>
  </div>
  <% } %>
    <div class="edit-match col-md-4">
      <h2>Edit a new match</h2>
      <form class="edit-match-form" action="/dashboard/view/<%=match._id%>" method="POST" id="form-container">
        <label for="date">Date</label>
        <input id="date" type="date" name="date" value="<%= match.date.toISOString().substring(0,10) %>">
        <br><br>
        <label for="sport">Sport</label>
        <input id="sport" type="text" name="sport" value="<%= match.sport %>">
        <br><br>
        <label for="maxnum">Number of players</label><br>
        <input class="edit-maxnum" id="maxnum" type="number" name="maxnum" placeholder="number" value="<%= match.playersNumber %>">
        <br><br>
        <input id="lat" name="lat" type="hidden" value="<%= match.location.coordinates[0] %>">
        <input id="lon" name="lon" type="hidden" value="<%= match.location.coordinates[1] %>">
        <br><br>
        <input type="text" id="pac-input" class="controls" placeholder="Enter a location">
        <br><br>
    </div>
    <div class="col-md-6">
      <div id="map"></div>
      <br>
      <button class="create-match">Upload match</button>
      <br><a class="cancel" href="/dashboard">Cancel</a>
    </div>

    </form>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%=process.env.PATH_GMaps%>&libraries=places"></script>
    <script src="/javascripts/map.js"></script>
