<h1>Hola <%= user.username %></h1>
<img src="<%= user.pic_path %>"width="200px"height="200px">
<% if (typeof message != "undefined") { %>
  <div class="error-message"><%= message %></div>
<% } %>
<h2>List of matches</h2>


<ul>
  <% matches.forEach( match => { %>
    <a href="/dashboard/view/<%= match._id %>">
      <div class="match-<%= match._id %>">
        <%= match.date%>
        <% if (match.players.toString().indexOf(user._id.toString()) < 0) { %>
          <a href="/dashboard/view/<%= match._id %>/new-player">a√±adirme al partido</a>
          <br>
        <% } else { %>
          <a href="/dashboard/<%= match._id %>/deletemyself">delete me from the list</a>
          <br>
          <% } %>
          <%= match.sport %>
            <br>
            <p>jugadores:
              <ol>
                <% match.players.forEach(p=>{ %>
                  <li>
                    <%= p.username %>
                  </li>
                  <% }) %>
              </ol>
            </p>
            <br>
            <p>comentarios:
              <ol>
                <% match.comments.forEach(c=>{ %>
                  <li>
                    <%= c.description %>
                  <% if (user._id == c._creatorId.toString()){ %>
                    <a href="/dashboard/<%= match._id%>/<%= c._id%>">Delete comment</a>
                  <% } %>
                  </li>
                  <% }) %>
              </ol>
            </p>
    </a>
    <br>
    <% if (user._id == match.creator){ %>
      <a href="/dashboard/view/delete/<%= match._id%>">Delete item</a>
    <% } %>
      <br>
      <a href="/dashboard/<%= match._id %>/new-comment">Add comment</a>
    </div>
      <br>
    <%  }) %>
</ul>
<script> var myMatches = <%- JSON.stringify(matches) %>; </script>
<script src="/javascripts/external/jquery/jquery.min.js" charset="utf-8"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%=process.env.PATH_GMaps%>&libraries=places"></script>
<script src="/javascripts/map2.js" ></script>
<script src="/javascripts/main.js"></script>